<#macro jumbotron image pageName>
    <div class="jumbotron card card-image"
         style="background-image: url(${image});">
        <div class="text-black text-center py-5 px-4">
            <div>
                <h1 class="card-title h1-responsive pt-3 mb-5 font-bold"><strong>${pageName}</strong></h1>
            </div>
        </div>
    </div>
</#macro>